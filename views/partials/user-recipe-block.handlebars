<h1>My Recipes</h1>

  <div class="recipe-log"> 
    
    {{#each recipes}}
      <div class="card">
        
        <div class="card-header">  
          <h3>{{this.recipe_name}}</h3>
        </div>
          
        <div class="card-body"> 
          <p>Cuisine: {{this.recipe_cuisine}} | Suits Dietary Needs: {{this.recipe_tags}} | My Rating: {{this.recipe_rating}}</p>
          <p>Dish Inspired By: {{this.restaurant_menu_item}} | Recipe Added: {{this.recipe_date}}</p>
        </div>

      </div>

    {{/each}}

  </div>